    // HÃ m load ná»™i dung tá»« trang khÃ¡c vÃ  thay tháº¿ <main>
    function loadPage(pageUrl) {
        fetch(pageUrl)
            .then(response => response.text())
            .then(html => {
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                const newMain = doc.querySelector('main');  // Chá»‰ láº¥y <main> tá»« trang Ä‘Ã­ch
                if (newMain) {
                    document.querySelector('main').innerHTML = newMain.innerHTML;  // Thay ná»™i dung <main> hiá»‡n táº¡i
                    // Cáº­p nháº­t URL mÃ  khÃ´ng reload
                    history.pushState(null, '', pageUrl);
                    console.log('ÄÃ£ load ná»™i dung tá»«: ' + pageUrl);
                } else {
                    console.error('KhÃ´ng tÃ¬m tháº¥y <main> trong ' + pageUrl);
                }
            })
            .catch(error => console.error('Lá»—i load trang: ', error));
    }

    // Xá»­ lÃ½ click nav
    document.addEventListener('DOMContentLoaded', function() {
        const navLinks = document.querySelectorAll('nav a');
        navLinks.forEach(link => {
            link.addEventListener('click', function(event) {
                event.preventDefault();  // NgÄƒn chuyá»ƒn trang
                const href = this.getAttribute('href');
                if (href && href !== window.location.pathname.split('/').pop()) {  // TrÃ¡nh load láº¡i trang hiá»‡n táº¡i
                    loadPage(href);
                }
            });
        });
    });

    // Xá»­ lÃ½ back/forward button (tÃ¹y chá»n)
